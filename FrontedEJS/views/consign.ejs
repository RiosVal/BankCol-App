<%- include("partials/head.ejs") %>
<link rel="stylesheet" href="/styles/withdraw.css">
<link rel="stylesheet" href="/styles/styles.css">
<title>Consignar</title>
<body>
    <section id="withdraw">
        <%- include("partials/navbar.ejs") %>

        <div id="withdrawCard">
            <h1 id="withdrawTitle">Consignar</h1>
            <form action="/consign" method="post">
                <div id="inputGroupContainer">
                    <div class="inputGroup">
                        <label for="">¿A dónde vas a consignar?</label>
                        <select name="accountToUse" id="accountToUse">
                            <% data.products.forEach(product => { %>
                                <% if (product.type != 'Cdt') { %>
                                    <option value="<%= product.id %>"><%= product.type %>: <%= product.id %></option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>
                    <div class="inputGroup">
                        <label for="">¿Cuánto vas a consignar?</label>
                        <input name="amount" type="number">
                    </div>
                </div>

                <div id="submitContainer"><input type="submit" value="Consignar"></div>
            </form>
        </div>
    </section>
</body>